{
  "name": "nova-ai-monitor",
  "version": "2.0.0",
  "description": "Nova AI - AI Employee Management Platform",
  "main": "electron/main.js",
  "author": "Nova AI Team",
  "license": "MIT",
  "scripts": {
    "dev:electron": "vite",
    "build:electron": "vite build && electron-builder",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --mac --win"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.novaai.monitor",
    "productName": "Nova AI Monitor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
